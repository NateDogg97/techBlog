{{> posts}}

<div class="container display-none" id="newComment-form">
  <div class="new-comment">
    <div style="display: flex; align-items: center; justify-content: space-between; margin-bottom: 15px;">
    <h3>Comment</h3>
    <a href="#">Cancel</a>      
    </div>
    <form class="comment-form">
      <div class="form-group">
        <textarea class="form-control" id="comment-content" name="comment-content" rows="4" cols="4" max-length="250"></textarea>
      </div>   
    </form>
  </div>
</div>

<div class="newPost" id="newComment-div">
  <button type="button" class="btn btn-primary mx-auto" id="newComment-button">Comment</button>
</div>

{{#each comments as |comment|}}
{{> comments}}
{{/each}}

<script src="/scripts/post.js"></script>