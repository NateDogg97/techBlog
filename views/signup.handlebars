<div class="container">
  <div class="login-section">
    <div style="display: flex; align-items: center; justify-content: space-between; margin-bottom: 15px;">
    <h3>Sign up</h3>
    <a href="/login">Already have an account?</a>      
    </div>
    <form class="signup-form">
      <div class="form-group">
        <label for="username-signup">Choose a Username</label>
        <input type="text" class="form-control" id="username-signup" aria-describedby="emailHelp">
      </div>
      <div class="form-group">
        <label for="password-signup">Password</label>
        <input type="password" class="form-control" id="password-signup">          
      </div>
      <div class="form-group">
        <label for="password-confirm">Confirm Password</label>
        <input type="password" class="form-control" id="password-confirm">          
      </div>
      <div class="form-group" style="display: flex; justify-content: space-between;">
        <button type="submit" class="btn btn-primary px-5 mx-auto" id="signup-button">Sign up</button>         
      </div>      
    </form>
  </div>
</div>

<script src="/scripts/login.js"></script>